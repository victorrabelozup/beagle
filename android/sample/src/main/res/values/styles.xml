<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="DesignSystem.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/DesignSystem.Toolbar.TextAppearance</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="DesignSystem.Toolbar.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignSystem.Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="DesignSystem.Button.White" parent="DesignSystem.Button.Default">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="DesignSystem.Button.Text" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DesignSystem.Text.Default" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DesignSystem.Text.H2" parent="DesignSystem.Text.Default">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DesignSystem.Text.H3" parent="DesignSystem.Text.Default">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
